// main: wizard-main.styl, out: $1.css, sourcemap: true, compress: false
article
  height 'calc(100vh - %s)' % (headerHeight)
  display flex
  flex-direction column
  @media screen and (min-width: 768px)
    flex-direction row
  .preview-box
    border none
    width 100%
    display block
    flex-grow 1
    @media screen and (min-width: 768px)
      order 2
  .iframe-container
    width 480px
    pointer-events none
    transform translate(-100%, 0)
    iframe
      border 0
      width 100%
      height auto
  aside
    display flex
    flex-direction column
    border-top 1px solid
    height 100%
    transform translate(-100%, 0)
    transition-duration .2s
    z-index -1
    @media screen and (min-width: 768px)
      height calc(100vh - 45px)
      width 480px
      border-top 0
      border-right 1px solid
  section
    padding 8px 16px
    background-color white
    flex-grow 1
    overflow-y overlay
    @media screen and (min-width: 768px)
      flex-grow 1
    label
      display block
    input
      width 100%
    .sub-menu-wrapper
      display flex
      height 42px
      margin 0 -4px
      padding 8px 0
      position sticky
      top 0
      background-color white
      button
        flex 1
        margin 0 4px
        text-transform uppercase
        border 0
        background-color #e6e6e6
        color #000
        padding 0 16px
        border-radius 15px
        font-size 10px
        letter-spacing 1px
        outline none
        cursor pointer
        &.active
          background-color #0466c8
          color #fff
    .img-wrapper
      width calc(50% - 2px)
      height 100px
      background-size cover
      background-position center center
      display block
      float left
      margin 2px
      &:nth-child(odd)
        margin-left 0
      &:nth-child(even)
        margin-right 0
      .img-overlay
        width 100%
        height 100%
        position relative
        &.active
          background-color #0566ec73
    &.categories
      .type-wedding
        background-image url("/public/gallery/wedding-1.jpg")
      .type-childrenbirth
        background-image url("/public/media/cover-category-toy-story.jpg")
      .text-layer
        background-color: #35323296;
        margin 0
        position absolute
        bottom 0
        width 100%
        color #fff
        padding 8px
        font-size 15px
        text-transform uppercase
        font-weight bold
    &.templates
      padding-top 0
    &.pictures
      padding-top 0
    .btn-dresscode
      height calc(40%)
      width calc(50% - 16px)
      margin 8px
      .svg-inline--fa
        display block
        margin 4px auto
    &.control-bar
      flex-grow 0
      button
        width 33.333%
    &.done
      text-align center
      height calc(100vh - var(--header-height) - var(--navbar-height))
      .url-container
        background-color #efefef
        border-radius 4px
        padding 8px
        margin 8px auto
        cursor pointer
        display block
        width fit-content
        svg[role="img"]
          margin-left 8px
      .share-container
        background-color #efefef
        border-radius 4px
        padding 16px
        cursor pointer
        margin-bottom 16px
      .icon-share
        margin 0 16px
      .demo-container
        border 1px solid #ff8c00
        padding 16px
        text-align left
        .svg-inline--fa
          color darkorange
        button
          width 100%
          padding 16px
          display block
          text-transform uppercase
          border-radius 4px
          &.read-more
            margin-bottom 8px
            background-color transparent
            color #999
            border 2px solid currentColor
          &.purchase
            background-color darkgreen
            color #FFF
            border 0

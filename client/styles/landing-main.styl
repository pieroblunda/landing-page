// out: $1.$2.css, sourcemap: true, compress: false

$blue-100 = #87bfff
$blue-200 = #75d0e5
$blue-300 = #bfdbf7
$blue-400 = #58A3FD
$blue-500 = #0466c8

$black-100 = #0000001a
$black-200 = #f5f5f5
$black-300 = #f9f9f9
$black-400 = #acb6bf
$black-500 = #24292e
$black-600 = #000000

$green-primary = #6bbf59

$size-05x = 4px
$size-1x = 8px
$size-2x = 16px
$size-3x = 24px
$size-4x = 32px
$size-6x = 48px
$size-8x = 64px
$size-9x = 72px

*
  padding 0
  margin 0

body
  font-family 'Raleway', sans-serif
  .hero
    background-image url(public/media/hero-landing.png)
    background-size 60%
    background-position bottom right
    background-repeat no-repeat
    @media screen and (min-width: 768px)
      background-size 40%
    .container
      max-width 1250px
    h1
      color white
    p
      margin-bottom 0
    a
      font-size 20px
      margin 3rem 0
    .col
      &:first-child
        margin-left 0
      &:last-child
        margin-right 0
  .neck
    p
      max-width 680px
      margin 0 auto $size-2x auto
  .how-helps-you
    padding-top 0
    padding-bottom 0
    .bg-blue
      background-color $blue-300
      height 184px
    .qr-container
      display flex
      justify-content center
      align-items center
      background-image url('public/media/qr-arrow.svg')
      background-size 100px
      background-repeat no-repeat
      background-position 65% bottom
      img
        margin auto $size-1x
      .amatic-text
        font-family 'Amatic SC', cursive
        font-size $size-4x
        line-height 36px
        width 50%
        margin-bottom 50px
    .row
      display inline-flex
      margin-top $size-2x
      margin-bottom $size-3x
    #countdown
      font-size 3rem
      font-weight 600
      text-align center
      padding 4rem 0
      color white
      text-shadow 0px 0px 5px #969696
    .question-wrapper
      display flex
      justify-content center
      align-items center
      p
        margin 0
        position absolute
        transform translate(0, -50px)
      button
        padding $size-1x
        border 1px solid #000
        width 150px
        outline none
        transform translate(0, 12px)
        transition-duration .2s
        animation-timing-function ease-in-out
        &:first-of-type
          border-right 0
          border-radius $size-05x 0 0 $size-05x
        &:last-of-type
          border-radius 0 $size-05x $size-05x 0
      &.dirty
        button
          color white
          &.clicked
            width 200px
            background-color #57cc99
          &:not(.clicked)
            background-color #ff9b85
            width 100px
    .fn-square
      background-color $blue-300
      padding $size-2x
      margin $size-05x 0
      border-radius $size-05x
      flex-basis 20%
      max-width 200px
      h3
        color #000
      p
        margin 0
  .how-it-works
    .row
      display inline-flex
      margin-top $size-2x
      margin-bottom $size-3x

    .text-container
      @media screen and (min-width: 768px)
        text-align right
    .number
      color $blue-500
      font-weight 600
      display inline-block
      border-radius 50%
      background-color #fff
      width 30px
      height 30px
      text-align center
      line-height 30px
      font-size 24px
      font-family sans-serif
      margin-right 8px
      vertical-align middle
  .testimonials
    blockquote
      .author
        font-weight bold
        font-style italic
        margin-bottom 0
        small
          display block
          font-weight normal
          font-size 70%
  .pricing
    .product-wrapper
      border 1px solid #58A3FD
      border-radius $size-1x
      margin-bottom $size-4x
      ul
        color #58A3FD
        margin $size-2x 0
        &.col
           flex 1
        &:not(:last-child)
          border-right 1px solid #58A3FD
        li
          text-align center
          padding $size-2x
          margin 0 $size-2x
          font-size 80%
          font-weight 600
          &.title
            padding $size-2x 0
          &.icon
            margin 0
            img
              width 135px
          &:last-child
            margin-bottom $size-2x
          .currency
            font-size 14px
          .price
            font-size 3rem
            line-height 2rem
            margin 0 $size-1x
          .suscription
            color #acb6bf
          .dsc
            color #000
            font-weight normal
            margin 0
          .small-note
            color #acb6bf
            margin $size-1x 0
            font-size 80%
            display block
          h3
            color #acb6bf
            margin-bottom $size-1x
            font-size 30px
          h4
            margin-bottom $size-2x
            text-transform uppercase
            display block
    h3 + p.text-center
      max-width 480px
      margin 0 auto 24px auto
  .contact-us
    background-color #d9d9d9
    margin-top 50px
    h2
      color black
    .container
      max-width 840px
    .btn-contact-us
      background-color darken(#d9d9d9, 25%)
      display inline-block
      padding $size-1x $size-4x
      color #000
      margin 0 $size-1x
      border-radius $size-05x
      svg[role="img"]
        margin 0
        display block
  .suscribe
    background-color #24292e
    color white
    padding 4rem
    h3
      color white
      margin-bottom 2rem
    input
      border 1px solid #cecece
      border-radius 4px 0 0 4px
      padding 8px
      &[type="button"]
        border-left 0
        border-radius 0 4px 4px 0
  footer
    background-color #000
    color white
    padding 10px
    font-size 80%

section
  padding 1rem

h1
  font-size 4rem
  margin-bottom 1rem
  font-weight 300
  color $blue-500

h2
  font-size 3rem
  line-height  3rem
  margin-bottom .75rem
  font-weight 300
  color $blue-500
h3
  font-size 2.2rem
  line-height  2.2rem
  color $blue-500
  font-weight 300
  margin-bottom 0.4rem
  small
    display block
    color #24292e
    font-size 14px
    text-transform uppercase
    line-height 14px
    font-weight 600
p
  line-height 1.4rem
  margin-bottom 1.4rem

svg[role="img"]
  margin $size-2x

img
video
  display block
  margin 0 auto

ul
  margin 0
  padding 0
  list-style-type none
  li
    margin 0
    padding 0

summary
  font-weight bold
  border-radius 5px
  cursor pointer
  outline none
  padding $size-2x

details
  background-color white
  margin-bottom $size-2x
  &[open]
    padding $size-2x
    summary
      padding 0
      margin-bottom $size-1x


blockquote
  padding 4rem 1rem 0 1rem
  position relative
  background-image url("public/media/quote-left-solid.svg")
  background-repeat no-repeat
  background-size 132px
  max-width 680px
  margin 0 auto
  p
    font-size 1.4rem

.inverted
  background-color $blue-500
  color white
  h1, h2, h3, p
    color white
.container
  width 100%
  max-width 960px
  margin 0 auto
.d-flex
  display flex
  flex-wrap wrap
  height 100%
@media screen and (max-width: 767px)
  .order-1
    order 1
  .order-2
    order 2
  .order-3
    order 3
.row
  width 100%
  @media screen and (min-width: 768px)
    &.gutted
      .col
        margin-left $size-2x
        margin-right $size-2x
        &:first-child
          margin-left 0
        &:last-child
          margin-right 0
.col
  flex 1 0 100%
  @media screen and (min-width: 768px)
    flex 0 1 auto
.centered
  justify-content center
.vertical-align
  align-items center
.wrap
  flex-wrap wrap
.no-wrap
  flex-wrap nowrap
  overflow-x overlay
.space-around
  justify-content space-around
.space-between
  justify-content space-between
.text-right
  text-align right
.text-center
  text-align center
.text-hint
  font-size 70%
  font-style italic
  margin 2px 0
.text-large
  font-size 24px
  line-height 30px
.img-fluid
  width 100%
.no-margin
  margin 0
.btn-primary
  background-color $green-primary
  border none
  color white
  text-decoration none
  display inline-block
  border-radius $space-05x
  padding $size-2x $size-4x
  font-size $size-3x
button
a
video
[ng-click]
  cursor pointer
@media screen and (max-width: 767px)
  .desktop-only
    display none
  .carousel-wrapper
    flex-wrap nowrap
    overflow-x overlay
    .col
      min-width 'calc(100% - %s)' % $size-8x !important
@media screen and (min-width: 768px)
  .col
    flex 1 1
  body
    .pricing
      .product-wrapper
        ul
          &.col
            flex 1
          li
            &.icon
              img
                width auto
            &.price
              font-size 150%
              small
                display block
                color #000
                font-weight normal
                font-size 12px
  section
    padding 3rem

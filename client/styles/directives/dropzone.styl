// main: ../wizard-main.styl, out: $1.css, sourcemap: true, compress: false
.dropzone-wrapper
  .dropzone
  .img-dropped
    width 100%
    border-radius 2px
    border-width 2px
    border-style dashed
    border-color darken(#e0e3e4, 10%)
    color #c6cbcc
    background-color #e0e3e4
    height 100px
    cursor pointer
    display flex
    align-items center
    justify-content center
    position relative
  input[type="file"]
    position absolute
    height 100%
    opacity 0
    cursor pointer
  .img-dropped
    border-style solid
    border-color darken(#e0e3e4, 10%)
    background-size cover
    background-position center
    cursor default
    .overlay
      background-color rgba(0,0,0,.4)
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
      .circle
        cursor pointer
        background-color #fff
        width 50px
        height 50px
        border-radius 50%
        font-size 25px
        line-height 50px
        text-align center
        color #35414d
        &:hover
          background-color darken(#ffffff, 10%)
  small
    font-style italic
    font-size 10px
    color #999
    display block
    margin 0
